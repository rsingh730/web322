<h2>Add New Item</h2>
<hr />

<form method="POST" action="/items/add" enctype="multipart/form-data">
  <fieldset>
    <legend>Feature Image</legend>
    <div class="row">
      <div class="col-md-12">
        <div class="form-group">
          <input class="form-control" id="featureImage" name="featureImage" type="file" aria-label="Feature Image" required />
        </div>
      </div>
    </div>
  </fieldset>
  <br />
  <fieldset>
    <legend>Post Content</legend>
    <div class="row">
      <div class="col-md-12">
        <div class="form-group">
          <label for="title">Item Name:</label>
          <input class="form-control" id="title" name="title" type="text" aria-label="Item Name" required />
        </div>
      </div>
    </div>
    <div class="row">
      <div class="col-md-12">
        <div class="form-group">
          <label for="price">Price:</label>
          <input class="form-control" id="price" name="price" type="number" step="0.01" aria-label="Price" required />
        </div>
      </div>
    </div>
    <div class="row">
      <div class="col-md-12">
        <div class="form-group">
          <label for="body">Description:</label>
          <textarea class="form-control" id="body" name="body" rows="5" aria-label="Description" required></textarea>
        </div>
      </div>
    </div>
    <div class="row">
      <div class="col-md-6">
        <div class="form-group">
          <label for="category">Category:</label>
          <select class="form-control" name="category" id="category" aria-label="Category" required>
            <option value="">Select Category</option>
            {{#each categories}}
              <option value="{{id}}">{{category}}</option>
            {{/each}}
          </select>
        </div>
      </div>
      <div class="col-md-6">
        <div class="form-group">
          <label for="published">Visibility:</label>
          <div class="form-check">
            <input type="checkbox" class="form-check-input" name="published" id="published" />
            <label class="form-check-label" for="published">Published</label>
          </div>
        </div>
      </div>
    </div>
  </fieldset>
  <hr />
  <input type="submit" class="btn btn-primary pull-right" value="Add Item" />
</form>
